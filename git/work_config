[user]
	name = Perelman Roi (DI FA)
	email = roi-perelman@siemens.com

[core]
  editor = nvim
	excludesFile = ~/.gitignore

[pull]
  rebase = true

[rebase]
  autoStash = true

[alias]
  # Thanks r00k, this creates a pretty graph view of the log
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  ins = "!$INSPEKTO_HOME/tinybox/scripts/inspekto_git.py"

[diff]
	algorithm = patience
	compactionHeuristic = true
	tool = nvimdiff
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd L\"

[merge]
	tool = nvimdiff4
	prompt = false
[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
  trustExitCode = true
  # cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[commit]
	template = ~/myConfigurations/git/commit_template
	verbose = true
[init]
	defaultBranch = develop
